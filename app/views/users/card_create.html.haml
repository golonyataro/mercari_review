.home
  = render partial: "items/header"

.users
  .card-create
    %main
      .card-lists
        .title
          %p クレジットカード情報入力
        = form_tag("/users/pay", method: :post, id: 'charge-form',  name: "inputForm") do
          .card-number
            .card-p
              %p.card-title カード番号 
              %p.hissu 必須
            = text_field_tag "number", "", class: "number input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .images
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?1734511784" alt="")/
              %img(src="https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?1734511784" alt="")/
            %br
          .card-expiration
            .card-p
              %p.card-title 有効期限
              %p.hissu 必須
            .expiration-select
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
              %br
          .card-code
            .card-p
              %p.card-title セキュリティコード
              %p.hissu 必須
            = text_field_tag "cvc", "", class: "cvc input", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            %p.card-back
              = link_to("カード裏面の番号とは?", "", class: "card-back-btn")
          #card_token
          .add-card
            = submit_tag "追加する", id: "token_submit", class: "add-card-btn"

= render partial: "mypage"
.home
  = render partial: "items/footer"