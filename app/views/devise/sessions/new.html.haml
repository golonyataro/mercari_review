.users
  .users-login
    = render "layouts/mercari-top"
    %main
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .users-new
          %p アカウントをお持ちでない方はこちら
          .users-new-link
            = link_to "新規会員登録", new_registration_path(resource_name), class: "users-new-link-btn"
        .users-sns
          .users-sns-link
            .users-sns-link-facebook
              = link_to "Facebookでログイン", "", class: "facebook-btn"
              %br/
            .users-sns-link-google
              = link_to "Googleでログイン", "/users/auth/google_oauth2", class: "google-btn"
        .field
          = f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "email-field"
        .field
          = f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "password-field"
        .actions
          = f.submit "ログイン", class: "login"
    = render "layouts/mercari-bottom"
