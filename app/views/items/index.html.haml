%body
  .home
    = render partial: "header"
    %main
      = link_to("メルガチャ","/items/random_page", class: "btn-random")
      %a.btn-exhibition{:href => "/items/new"}
        %i.fas.fa-camera.fa-lg 出品
      #top-banner.top-banner
        = image_tag "http://www.v3wall.com/wallpaper/3840_1200/1406/3840_1200_201406231140461375800.jpg", alt: ""
        = image_tag "http://www.v3wall.com/wallpaper/3840_1200/1406/3840_1200_201406231140461375800.jpg", alt: ""
        = image_tag "http://www.v3wall.com/wallpaper/3840_1200/1406/3840_1200_201406231140461375800.jpg", alt: ""
      .pickup
        .pickup-category
          %p.pickup-head ピックアップカテゴリー
          .pickup-contents
            = render partial: "item-array", locals: { items: @items, category: "レディース" }
            = render partial: "item-array", locals: { items: @items, category: "おもちゃ・ホビー・グッズ" }
            = render partial: "item-array", locals: { items: @items, category: "ベビー・キッズ" }
            = render partial: "item-array", locals: { items: @items, category: "コスメ・香水・美容" }
        .pickup-bland
          %p.pickup-head ピックアップブランド
          .pickup-contents
            = render partial: "item-array", locals: { items: @items, category: "シャネル" }
            = render partial: "item-array", locals: { items: @items, category: "シュプリーム" }
            = render partial: "item-array", locals: { items: @items, category: "ナイキ" }
    = render partial: "footer"
